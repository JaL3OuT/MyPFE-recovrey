<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pfe.mjihe.mypfe.activities.Recharger_Wallet">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="82dp"
        android:text="Solde Actuel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="82dp" />

    <TextView
        android:id="@+id/arecharger "
        android:layout_width="74dp"
        android:layout_height="34dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="58dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="170dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soldeActuel"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="159dp">

        <EditText
            android:id="@+id/sommeET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="somme recharge"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/soldeActuel"
        android:layout_width="105dp"
        android:layout_height="33dp"
        android:layout_marginEnd="91dp"
        android:layout_marginTop="82dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="82dp" />

    <Button
        android:id="@+id/rvalidRecharge"
        android:layout_width="378dp"
        android:layout_height="54dp"
        android:layout_marginBottom="173dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Valider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="340dp" />

</android.support.constraint.ConstraintLayout>
